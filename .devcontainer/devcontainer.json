{
  "name": "Python Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // Run custom setup script
  "postCreateCommand": "chmod +x .devcontainer/scripts/setup.sh && bash .devcontainer/scripts/setup.sh",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python",
        "python.terminal.activateEnvironment": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ]
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

"mounts": [
  "source=${localEnv:GOOGLE_APPLICATION_CREDENTIALS},target=/tmp/gcp-key.json,type=bind,consistency=cached"
],
"containerEnv": {
  "GOOGLE_APPLICATION_CREDENTIALS": "/tmp/gcp-key.json"
}
}
